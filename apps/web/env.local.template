# Local Development Environment Configuration
# Copy this file to .env.local and customize for your local development

# Environment
NODE_ENV=development
ENVIRONMENT=local

# Database - Connect to Docker Compose services
DATABASE_URL="postgresql://postgres:password@localhost:5432/inboxzero"
DIRECT_URL="postgresql://postgres:password@localhost:5432/inboxzero"

# Auth secrets (generate new ones for local)
AUTH_SECRET="your-local-auth-secret-32-chars-min"
NEXTAUTH_SECRET="your-local-nextauth-secret-32-chars-min"

# OAuth credentials (use separate dev apps)
GOOGLE_CLIENT_ID="your-local-google-client-id"
GOOGLE_CLIENT_SECRET="your-local-google-client-secret"
MICROSOFT_CLIENT_ID="your-local-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-local-microsoft-client-secret"

# Email encryption (generate new ones for local)
EMAIL_ENCRYPT_SECRET="your-local-email-encrypt-secret"
EMAIL_ENCRYPT_SALT="your-local-email-encrypt-salt"

# LLM Configuration (use cheaper/free models for local dev)
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-3-haiku-20240307
ECONOMY_LLM_PROVIDER=anthropic
ECONOMY_LLM_MODEL=claude-3-haiku-20240307
CHAT_LLM_PROVIDER=anthropic
CHAT_LLM_MODEL=claude-3-haiku-20240307

# API Keys (use your own keys for local dev)
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_API_KEY="your-google-api-key"

# Redis - Connect to Docker Compose Redis service
UPSTASH_REDIS_URL="http://localhost:8079"
UPSTASH_REDIS_TOKEN="dev-token"
REDIS_URL="redis://localhost:6379"

# Pub/Sub (use local/test topic)
GOOGLE_PUBSUB_TOPIC_NAME="inbox-zero-local-dev"
GOOGLE_PUBSUB_VERIFICATION_TOKEN="local-dev-token"

# Webhook secrets
MICROSOFT_WEBHOOK_CLIENT_STATE="local-dev-state"

# Internal API key (generate new one for local)
INTERNAL_API_KEY="local-dev-internal-key"

# Admin emails (add your email for local admin access)
ADMINS="your-email@example.com"

# Base URL for local development
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Disable external services for local dev
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_GTM_ID=""

# Optional: Enable debug logs for local development
ENABLE_DEBUG_LOGS=true
LOG_ZOD_ERRORS=true

# Disable premium features for local dev (optional)
NEXT_PUBLIC_LEMON_STORE_ID=""
NEXT_PUBLIC_BASIC_MONTHLY_VARIANT_ID=0
NEXT_PUBLIC_BASIC_ANNUALLY_VARIANT_ID=0
NEXT_PUBLIC_PRO_MONTHLY_VARIANT_ID=0
NEXT_PUBLIC_PRO_ANNUALLY_VARIANT_ID=0
NEXT_PUBLIC_BUSINESS_MONTHLY_VARIANT_ID=0
NEXT_PUBLIC_BUSINESS_ANNUALLY_VARIANT_ID=0
NEXT_PUBLIC_COPILOT_MONTHLY_VARIANT_ID=0
