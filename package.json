{
  "name": "inbox-zero",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./apps/web",
    "dev": "turbo dev --filter=./apps/web",
    "test": "turbo run test --filter=./apps/web",
    "lint": "turbo lint",
    "prepare": "husky install",
    "ncu": "ncu -u -ws",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "env:check": "bash scripts/validate-env.sh",
    "env:check:ci": "bash scripts/validate-env.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@turbo/gen": "2.5.6",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "2.5.6",
    "ultracite": "5.3.3"
  },
  "packageManager": "pnpm@10.17.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.10",
      "@types/react-dom": "19.0.4"
    },
    "patchedDependencies": {
      "better-auth@1.3.7": "patches/better-auth@1.3.7.patch"
    }
  }
}
