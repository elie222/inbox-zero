{
  "name": "inbox-zero",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier": "npx prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "ncu": "ncu -u -ws",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@turbo/gen": "^2.1.2",
    "eslint": "^9.10.0",
    "@inboxzero/eslint-config": "workspace:*",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.2"
  },
  "packageManager": "pnpm@9.10.0",
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
